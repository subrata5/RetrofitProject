<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Profile"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:gravity="center"
                    android:layout_alignBottom="@+id/linearView"
                    android:textSize="15dp"
                    android:layout_marginTop="8dp"
                    />

                <LinearLayout
                    android:outlineAmbientShadowColor="@color/bg_dark_shadow"
                    android:id="@+id/linearView"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="@drawable/rounded_corner_box">



                    <EditText
                        android:id="@+id/et_email"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:layout_marginBottom="15dp"
                        android:inputType="textEmailAddress"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/email_small"
                        android:padding="10dp"
                        />



                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:layout_marginBottom="15dp"
                        android:inputType="textPersonName"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/user_small"
                        android:padding="10dp"
                        />

                    <EditText
                        android:id="@+id/et_school"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="School"
                        android:layout_marginBottom="15dp"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/school_small"
                        android:padding="10dp"
                        />

                </LinearLayout>

                <Button
                    android:layout_marginTop="8dp"
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_button"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="Save"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/sign_up_box_bg"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cardview_dark_background"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:gravity="center"
                    android:layout_alignBottom="@+id/linearView"
                    android:textSize="15dp"
                    android:layout_marginTop="8dp"
                    />

                <LinearLayout
                    android:outlineAmbientShadowColor="@color/bg_dark_shadow"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="@drawable/rounded_corner_box">



                    <EditText
                        android:id="@+id/et_currentpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Current Password"
                        android:layout_marginBottom="15dp"
                        android:inputType="textPassword"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/password_small"
                        android:padding="10dp"
                        />



                    <EditText
                        android:id="@+id/et_newpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="New Password"
                        android:layout_marginBottom="15dp"
                        android:inputType="textPassword"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/password_small"
                        android:padding="10dp"
                        />


                </LinearLayout>

                <Button
                    android:id="@+id/btn_change"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_button"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="Change"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/sign_up_box_bg"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cardview_dark_background"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_button"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="Logout"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/sign_up_box_bg"/>

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_button_red"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:text="Delete Account"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/sign_up_box_bg"/>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>
