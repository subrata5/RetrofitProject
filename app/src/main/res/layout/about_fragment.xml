<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_sign_up">

    <TextView
        android:id="@+id/txt_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developer: Subrata Bal"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/sign_up_box_bg" />

    <TextView
        android:id="@+id/txt_insp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inspired by: Simplified coding"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/sign_up_box_bg"
        android:layout_below="@+id/txt_dev"/>

    <TextView
        android:id="@+id/txt_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Icons/Illustrations: https://icons8.com"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/sign_up_box_bg"
        android:layout_below="@+id/txt_insp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/info_ilus"
        android:padding="10dp"/>

</RelativeLayout>
